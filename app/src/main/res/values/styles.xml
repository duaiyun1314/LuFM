<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Basic" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--屏蔽原始actionbar 使用toolbar-->
        <item name="windowActionBar">false</item>
        <!--不显示window的title-->
        <item name="windowNoTitle">true</item>
        <!--窗体是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗体内容背景-->
        <item name="android:windowContentOverlay">@null</item>
        <!--toolbar 背景色-->
        <item name="colorPrimary">@color/toolbarColor</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/statusColor</item>
        <!--actionmode 背景色-->
        <item name="actionModeBackground">?colorPrimary</item>
        <!--checkbox button 选中的颜色-->
        <item name="colorAccent">#3c69ce</item>
        <!--自定义属性 ：list标题颜色-->
        <item name="titleColor">?colorPrimary</item>
        <!--自定义属性：list副标题颜色-->
        <item name="subTitleColor">#5d5b5b</item>
        <!--文本颜色-->
        <item name="android:textColor">@color/textColor</item>
        <item name="textSelectColor">#ff0000</item>
        <!--toolbar主题-->
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

    </style>

    <style name="Radio_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/rb_bg</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:textSize">16dip</item>
    </style>


    <!-- Notification bar actions -->
    <style name="NotificationAction">
        <item name="android:layout_width">@dimen/notification_action_width</item>
        <item name="android:layout_height">@dimen/notification_action_height</item>
        <item name="android:gravity">center|right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/notification_action_padding</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="NotificationAction.Previous" parent="@style/NotificationAction">
        <item name="android:src">@drawable/btn_playback_previous_light</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NotificationAction.Play" parent="@style/NotificationAction">
        <item name="android:src">@drawable/btn_playback_play_light</item>
    </style>

    <style name="NotificationAction.Next" parent="@style/NotificationAction">
        <item name="android:src">@drawable/btn_playback_next_light</item>
    </style>

    <style name="NotificationAction.Collapse" parent="@style/NotificationAction">
        <item name="android:src">@drawable/btn_notification_collapse</item>
    </style>

    <!-- Notification bar event text -->
    <style name="NotificationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
